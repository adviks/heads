---
layout: layouts/base.njk
section: home
---
<h2 class="homeTitle">{{ metadata.salut }}</h2>
{{ layoutContent | safe }}

<h2 style="color: #000;margin-bottom: 15px;font-weight: 800;border-bottom: 2px solid var(--secondary);width: max-content;">Articles</h2>
{% for post in collections.post | reverse %}
<article{% if post.url == url %} data-current="current item"{% endif %}>

			<h4 style="display: inline;font-weight: 600;">
				<a class="postListTitle" href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h4>
				<time datetime="{{ post.date | machineDate }}">
					<small class="dateTime">{{ post.date | readableDate }} </small>
				</time>
                <br>
				<!-- by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a> -->
            </article>
                {% endfor %}
