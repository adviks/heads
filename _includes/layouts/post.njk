---
layout: layouts/base.njk
section: post
---
<nav>
  <a href="{{ '/' | url }}">← back</a>
</nav>
<br>
<article>
  <h1 class="postTitle">{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ page.date | machineDate }}">{{ page.date | readableDate }}</time> by <a href="/authors/{{ author | slug }}/">{{ author }}</a>
    </small>
  </p>

  {{ layoutContent | safe }}

</article>


